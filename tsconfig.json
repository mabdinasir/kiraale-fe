{
    "compilerOptions": {
        "target": "ES2017",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "baseUrl": ".",
        "paths": {
            "@components/*": ["./components/*"],
            "@lib/*": ["./lib/*"],
            "@utils/*": ["./utils/*"],
            "@hooks/*": ["./hooks/*"],
            "@store/*": ["./store/*"],
            "@models/*": ["./models/*"],
            "@styles/*": ["./styles/*"],
            "@config/*": ["./config/*"],
            "@translations/*": ["./translations/*"],
            "@middleware/*": ["./middleware/*"],
            "@documentation/*": ["./documentation/*"],
            "@assets/*": ["./assets/*"],
            "@data/*": ["./data/*"],
            "@services/*": ["./store/services/*"]
        }
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "components/Layout/Navbar.tsx"],
    "exclude": ["node_modules"]
}
